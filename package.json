{
  "name": "@intlify/nuxt3",
  "version": "0.1.2",
  "description": "Nuxt3 module for vue-i18n-next",
  "homepage": "https://github.com/intlify/nuxt3/tree/main#readme",
  "bugs": {
    "url": "https://github.com/inlitify/nuxt3/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/intlify/nuxt3.git"
  },
  "license": "MIT",
  "author": {
    "name": "kazuya kawaguchi",
    "email": "kawakazu80@gmail.com"
  },
  "sideEffects": false,
  "exports": {
    "require": "./dist/module.js",
    "import": "./dist/module.mjs"
  },
  "main": "./dist/module.js",
  "module": "./dist/module.mjs",
  "types": "./dist/module.d.ts",
  "files": [
    "dist/module.js",
    "dist/module.mjs",
    "dist/plugin.mjs",
    "dist/module.d.ts"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:module": "siroc build",
    "build:plugin": "siroc build -i ./src/plugin.ts -o ./dist/plugin.mjs -f esm",
    "fix": "npm-run-all --parallel lint:fix format:fix",
    "format:fix": "npm-run-all --parallel \"format:prettier --write\"",
    "format:prettier": "prettier --config .prettierrc --ignore-path .prettierignore '**/*.{js,json,html}'",
    "lint": "npm-run-all --parallel lint:secret lint:codes",
    "lint:codes": "eslint ./src --ext .js,.ts,.vue,.json",
    "lint:fix": "npm-run-all --parallel \"lint:codes --fix\"",
    "lint:secret": "secretlint \"**/*\"",
    "release:prepare": "shipjs prepare",
    "release:trigger": "shipjs trigger"
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "*.{js,vue}": [
      "prettier --write",
      "eslint --fix --ext .js,.vue"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix --ext .ts"
    ],
    "*": [
      "secretlint"
    ]
  },
  "dependencies": {
    "@intlify/shared": "^9.2.0-beta.12",
    "@intlify/vite-plugin-vue-i18n": "^2.4.0",
    "@intlify/vue-i18n-loader": "^3.0.0",
    "@nuxt/kit": "npm:@nuxt/kit-edge@latest",
    "pathe": "^0.2.0",
    "vue-i18n": "^9.2.0-beta.12"
  },
  "devDependencies": {
    "@kazupon/lerna-changelog": "^4.3.0",
    "@nuxt/types": "^2.15.8",
    "@secretlint/secretlint-rule-preset-recommend": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "secretlint": "^3.3.0",
    "shipjs": "^0.24.0",
    "siroc": "^0.16.0",
    "typescript": "^4.4.3",
    "yorkie": "^2.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "changelog": {
    "labels": {
      "Type: Feature": ":star: Features",
      "Type: Bug": ":bug: Bug Fixes",
      "Type: Security": ":lock: Security Fixes",
      "Type: Performance": ":chart_with_upwards_trend: Performance Fixes",
      "Type: Improvement": ":zap: Improvement Features",
      "Type: Breaking": ":boom: Breaking Change",
      "Type: Deprecated": ":warning: Deprecated Features",
      "Type: I18n": ":globe_with_meridians: Internationalization",
      "Type: A11y": ":wheelchair: Accessibility",
      "Type: Documentation": ":pencil: Documentation"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  }
}
